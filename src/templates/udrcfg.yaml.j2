info:
  version: 1.0.0
  description: UDR initial local configuration (https://github.com/free5gc/free5gc/blob/main/config/udrcfg.yaml)

configuration:
  sbi: # Service-based interface information
    scheme: {{ scheme }}
    registerIPv4: {{ udr_ip_address }}
    bindingIPv4: 0.0.0.0
    port: {{ udr_sbi_port }}
    tls:
      pem: {{ tls_pem }}
      key: {{ tls_key }}
  mongodb:
    name: {{ common_database_name }}
    url: {{ common_database_url }}
    authKeysDbName: {{ auth_database_name }}
    authUrl: {{ auth_database_url }}
  nrfUri: {{ nrf_url }}
  webuiUri: {{ webui_uri }}

logger:
  UDR:
    debugLevel: {{ log_level }}
